@model ProjectViewModel

@{
    ViewData["Title"] = "Project Information";
}


<div class="container-fluid">
    <h1>View Project Information</h1>
    <hr/>
    <div class="row">
        <div class="col-6">
            <h3>Project info:</h3>
            <form asp-action="Info">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control"/>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <textarea asp-for="Description" rows="5" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="row">
                    <p>
                        <div class="col-6 form-group">
                            <input type="submit" value="Save Changes" class="btn btn-primary w-100"/>
                        </div>
                        <div class="col-6 form-group">
                            <a class="btn btn-danger w-100" asp-action="Delete" asp-route-id="@Model.Id">Delete Project</a>
                        </div>
                    </p>
                    <div class="form-group">
                        <p>
                            <a class="btn btn-primary w-100" asp-action="Index">Back to Projects</a>
                        </p>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-6">
            <h3>Project teams:</h3>
            <table class="table">
                <thead>
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        Team Leader
                    </th>
                </tr>
                </thead>
                <tbody>
                @foreach (var item in Model.Teams)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TeamLeader.UserName)
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>