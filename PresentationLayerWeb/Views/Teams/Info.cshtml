@model TeamViewModel

@{
    ViewData["Title"] = "Team Information";
}

<div class="container-fluid">
    <h1>View Team Information</h1>
    <hr/>
    <div class="row">
        <div class="col-6">
            <h3>Team info:</h3>
            <form asp-action="Info">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control"/>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProjectId" class="control-label"></label>
                    <select asp-for="ProjectId" class="form-control" asp-items="ViewBag.ProjectId"></select>
                    <span asp-validation-for="ProjectId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TeamLeaderId" class="control-label"></label>
                    <select asp-for="TeamLeaderId" class="form-control" asp-items="ViewBag.TeamLeaderId"></select>
                    <span asp-validation-for="TeamLeaderId" class="text-danger"></span>
                </div>
                <div class="row">
                    <p>
                        <div class="col-6 form-group">
                            <input type="submit" value="Save Changes" class="btn btn-primary w-100"/>
                        </div>
                        <div class="col-6 form-group">
                            <a class="btn btn-danger w-100" asp-action="Delete" asp-route-id="@Model.Id">Delete Team</a>
                        </div>
                    </p>
                    <div class="form-group">
                        <p>
                            <a class="btn btn-primary w-100" asp-action="Index">Back to Teams</a>
                        </p>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-6">
            <h3>Team developers:</h3>
            <table class="table">
                <thead>
                <tr>
                    <th>
                        Username
                    </th>
                    <th>
                        First Name
                    </th>
                    <th>
                        Last Name
                    </th>

                </tr>
                </thead>
                <tbody>
                @foreach (var item in Model.Users)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>