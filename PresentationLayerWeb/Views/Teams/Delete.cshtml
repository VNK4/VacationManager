@model BusinessLayer.Team

@{
    ViewData["Title"] = "Delete Team";
}

<h1>Delete Team</h1>

<h3>Are you sure you want to delete this team?</h3>
<div class="col-6">
    <hr />
    <dl class="row">
        <dt class = "col-3">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-9">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-3">
            @Html.DisplayNameFor(model => model.Project)
        </dt>
        <dd class = "col-9">
            @Html.DisplayFor(model => model.Project.Name)
        </dd>
        <dt class = "col-3">
            Team Leader
        </dt>
        <dd class = "col-9">
            @Html.DisplayFor(model => model.TeamLeader.UserName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
            <input type="hidden" asp-for="Id"/>
            <p>
                <input class="btn btn-danger w-100" type="submit" value="Delete"/>
            </p>
            <a class="btn btn-primary w-100" asp-action="Info" asp-route-id="@Model.Id">Back to Team</a>
        </form>
</div>
