@using BusinessLayer
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model VacationViewModel

@{
    ViewData["Title"] = "Approve Vacation";
}
<div class="container-fluid">
    <h1>Approve Vacation</h1>
    <hr/>
    <div class="row">
        <div class="col-6">
            <h3>Vacation info:</h3>
            <form asp-action="Approve">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Applicant" class="control-label"></label>
                    <input asp-for="Applicant.UserName" readonly class="form-control"/>
                    <span asp-validation-for="Applicant.UserName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="VacationType" class="control-label"></label>
                    <select asp-for="VacationType" asp-items="Html.GetEnumSelectList<VacationType>()" readonly class="form-control"></select>
                    <span asp-validation-for="VacationType" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="BeginningDate" class="control-label"></label>
                    <input asp-for="BeginningDate" readonly class="form-control"/>
                    <span asp-validation-for="BeginningDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EndDate" class="control-label"></label>
                    <input asp-for="EndDate" readonly class="form-control"/>
                    <span asp-validation-for="EndDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DateOfCreation" class="control-label"></label>
                    <input asp-for="DateOfCreation" readonly class="form-control"/>
                    <span asp-validation-for="DateOfCreation" class="text-danger"></span>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="HalfDayVacation"/> Half Day
                    </label>
                </div>
                @if (Model.ImageFilePath != string.Empty)
                {
                    <img src="~/images/@Model.ImageFilePath" alt="Image"/>
                }
                <div class="row">
                    <p>
                        <div class="col-6 form-group">
                            <input type="submit" value="Approve" class="btn btn-primary w-100"/>
                        </div>
                        <div class="col-6 form-group">
                            <a class="btn btn-danger w-100" asp-action="Reject" asp-route-id="@Model.Id">Reject</a>
                        </div>
                    </p>
                    <div class="form-group">
                        <p>
                            <a class="btn btn-primary w-100" asp-action="Index">Back to Vacations</a>
                        </p>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>