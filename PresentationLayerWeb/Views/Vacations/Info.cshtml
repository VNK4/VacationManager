@using BusinessLayer
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model VacationViewModel

@{
    ViewData["Title"] = "Vacation Information";
}
<div class="container-fluid">
    <h1>View Vacation Information</h1>
    <hr/>
    <div class="row">
        <div class="col-6">
            <h3>Vacation info:</h3>
            <form asp-action="Info" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="VacationType" class="control-label"></label>
                    <select asp-for="VacationType" asp-items="Html.GetEnumSelectList<VacationType>()" class="form-control"></select>
                    <span asp-validation-for="VacationType" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="BeginningDate" class="control-label"></label>
                    <input asp-for="BeginningDate" class="form-control"/>
                    <span asp-validation-for="BeginningDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EndDate" class="control-label"></label>
                    <input asp-for="EndDate" class="form-control"/>
                    <span asp-validation-for="EndDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DateOfCreation" class="control-label"></label>
                    <input asp-for="DateOfCreation" class="form-control" disabled/>
                    <span asp-validation-for="DateOfCreation" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="VacationImage" class="control-label"></label>
                    <input asp-for="VacationImage" class="form-control"/>
                    <span asp-validation-for="VacationImage" class="text-danger"></span>
                </div>
                @if (Model.ImageFilePath != null)
                {
                    <img src="~/images/@Model.ImageFilePath" alt="Image"/>
                }
                <div class="row">
                    <p>
                        <div class="col-6 form-group">
                            <input type="submit" value="Save Changes" class="btn btn-primary w-100"/>
                        </div>
                        <div class="col-6 form-group">
                            <a class="btn btn-danger w-100" asp-action="Delete" asp-route-id="@Model.Id">Delete Vacation</a>
                        </div>
                    </p>
                    <div class="form-group">
                        <p>
                            <a class="btn btn-primary w-100" asp-action="Index">Back to Vacations</a>
                        </p>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>